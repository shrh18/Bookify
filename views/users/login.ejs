<% layout('layouts/boilerplate')%>
    <h1>Login</h1>
    <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">Instagram Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success mb-5">Login</button>

        <div class="mb-3">
            Don't have an account?
            <a class="btn btn-primary btn-sm" href="/signUp">Sign Up</a>
        </div>
    </form>