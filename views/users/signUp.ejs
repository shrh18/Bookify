<% layout('layouts/boilerplate')%>
    <h1>Sign Up</h1>
    <form action="/signUp" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="username">Instagram Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
                Looks good !
            </div>
            <div class="invalid-feedback">
                Instagram Username required !
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required>
            <div class="valid-feedback">
                Looks good !
            </div>
            <div class="invalid-feedback">
                Email required !
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="area">Area of Living</label>
            <input class="form-control" type="text" id="area" name="area" required>
            <div class="valid-feedback">
                Looks good !
            </div>
            <div class="invalid-feedback">
                Area of Living required !
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Password required
            </div>
        </div>
        <button class="btn btn-success">Sign Up</button>
    </form>